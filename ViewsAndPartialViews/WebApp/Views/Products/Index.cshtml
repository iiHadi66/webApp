<section class="best-collection">
<div class="container">
    <h2>All Products</h2>
    <div class="collection-grid">
        @foreach (var product in ViewBag.AllProducts)
        {
            <!-- collection-item start -->
                

                <a href="@Url.Action("productDetails", "products", new { id = product.Id })" class="collection-item">
                <img src="images/placeholders/270x295.svg" alt="">
                <div class="body">
                    <div class="title">@product.ProductName</div>
                    <div class="info">
                        <div class="price">@product.Price $</div>
                        <i class="add-cart fa-regular fa-cart-plus"></i>
                    </div>
                </div>
            </a>
            <!-- collection-item end -->
        }
    </div>
</div>
  
</section>

