@model HomeViewModel


<section class="best-collection">
    <div class="container">
        <h1 class="collection-title">Best Collection</h1>
        <ul class="categories">
            <li class="category-item">All</li>
            <li class="category-item">Bag</li>
            <li class="category-item">Dress</li>
            <li class="category-item">Decoration</li>
            <li class="category-item">Essentials</li>
            <li class="category-item">Interior</li>
            <li class="category-item">Laptop</li>
            <li class="category-item">Mobile</li>
            <li class="category-item">Beaty</li>
        </ul>
        <h3>New Products</h3>
        <div class="collection-grid">
            @foreach (var product in Model.NewProducts)
            {
                 <!-- collection-item start -->

                <a href="@Url.Action("ProductDetails", "Products", new { id = product.Id })" class="collection-item">
                <img src="images/placeholders/270x295.svg" alt="">
                <div class="body">
                    <div class="title">@product.ProductName</div>
                    <div class="info">
                        <div class="price">@product.Price $</div>
                        <i class="add-cart fa-regular fa-cart-plus"></i>
                    </div>
                </div>
            </a>
            <!-- collection-item end -->
            }
        </div>


            <h3>Popular Products</h3>
        <div class="collection-grid">
              @foreach (var product in Model.PopularProducts)
                {
                    <!-- collection-item start -->
                <a href="@Url.Action("ProductDetails", "Products", new { id = product.Id })" class="collection-item">
                        <img src="images/placeholders/270x295.svg" alt="">
                        <div class="body">
                            <div class="title">@product.ProductName</div>
                            <div class="info">
                                <div class="price">@product.Price $</div>
                                <i class="add-cart fa-regular fa-cart-plus"></i>
                            </div>
                        </div>
                    </a>
                    <!-- collection-item end -->
                }
        </div>

            <h3>Featured Products</h3>
            <div class="collection-grid">
            @foreach (var product in Model.FeaturedProducts)
            {
                <!-- collection-item start -->
                <a href="@Url.Action("ProductDetails", "Products", new { id = product.Id })" class="collection-item">
                    <img src="images/placeholders/270x295.svg" alt="">
                    <div class="body">
                        <div class="title">@product.ProductName</div>
                        <div class="info">
                            <div class="price">@product.Price $</div>
                            <i class="add-cart fa-regular fa-cart-plus"></i>
                        </div>
                    </div>
                </a>
                <!-- collection-item end -->
            }
        </div>
  
        <div class="load-more">
            <button class="btn-outline-white">LOAD MORE <i class="fa-solid fa-rotate-right"></i></button>
        </div>
    </div>
</section>